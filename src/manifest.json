{
  "key": "evshopplugininternal",
  "manifest_version": 2,
  "name": "ExpertVoice Deal Alert",
  "description": "Don't miss out on your expert pricing.",
  "version": "1.3",
  "icons": {
    "16": "assets/images/icon16_gray.png",
    "48": "assets/images/icon48_gray.png",
    "128": "assets/images/icon128_gray.png"
  },
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "tabs",
    "*://*.expertvoice.com/"
  ],
  "browser_action": {},
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/*",
        "https://*.amazon.ca/*"
      ],
      "exclude_matches": [
        "https://expertvoice.com/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.min.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "assets/fonts/experticity-ux.ttf",
    "assets/fonts/source-sans-pro-v18-300.ttf",
    "assets/fonts/source-sans-pro-v18-400.ttf",
    "assets/fonts/source-sans-pro-v18-600.ttf",
    "assets/images/preview.png"
  ],
  "background": {
    "scripts": [
      "worker.min.js"
    ],
    "persistent": false
  },
  "applications": {
    "gecko": {
      "id": "cb5e8f5041aaccdfb4df6ef9798b752c0cae41d6@temporary-addon"
    }
  },
  "content_security_policy": "script-src 'unsafe-eval' 'self' https://*.expertvoice.com; object-src 'self'"
}